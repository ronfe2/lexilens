OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL_ID=anthropic/claude-3.5-sonnet
# 主力模型（默认用于 Layer 1 释义、Layer 2 语境示例、Layer 4 精细解读 等）
# Optional: dedicated image generation model (falls back to OPENROUTER_MODEL_ID if unset)
# OPENROUTER_IMAGE_MODEL_ID=openai/dall-e-3
# Optional (latency tuning): generic fast model used for cheaper, lower-latency calls
# （例如用于 Layer 4 Stage A：Lexical Map 快速选词）
# OPENROUTER_FAST_MODEL_ID=anthropic/claude-3.5-haiku
# Optional (latency tuning): dedicated model for Common Mistakes (Layer 3 常见错误)
# OPENROUTER_LAYER3_MODEL_ID=anthropic/claude-3.5-sonnet
# Optional (latency tuning): fast candidate-recall model for Lexical Map (Layer 4, Stage A 选词阶段)
# OPENROUTER_LAYER4_FAST_MODEL_ID=anthropic/claude-3.5-haiku
# Optional (latency tuning): main enrichment model for Lexical Map (Layer 4, Stage B 精细标注 + 解读)
# OPENROUTER_LAYER4_MAIN_MODEL_ID=anthropic/claude-3.5-sonnet
# Optional: enable vendor-specific "thinking"/reasoning mode per layer (defaults to false)
# （Layer3：Common Mistakes；Layer4：Lexical Map + 解读）
# OPENROUTER_LAYER3_THINKING_ENABLED=false
# OPENROUTER_LAYER4_THINKING_ENABLED=false
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["chrome-extension://*", "http://localhost:5173"]
LOG_LEVEL=INFO
